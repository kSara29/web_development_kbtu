@model List<Order>

@{
    ViewBag.Title = "Мои заказы";
    Layout = "_Layout";
}

<h2>Мои заказы</h2>
@if (Model.Count == 0)
{
    <h3> Заказов нет </h3>
}
else
{
    <table class="table" style="width: 100%">
        <tr>
            <th>Id</th>
            <th>Адрес</th>
            <th>Имя</th>
            <th>Контактный телефон</th>
            <th>Товар</th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Address</td>
                <td>@order.Name</td>
                <td>@order.ContactPhone</td>
                <td>@order.Phone.Brand @order.Phone.Title</td>
            </tr>
        }
    </table>
}