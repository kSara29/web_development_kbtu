@model Lesson.ViewModels.AddBrandVm

@{
    ViewBag.Title = "Добавление бренда";
    Layout = "_Layout";
}

<h2>Добавление бренда</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            @*<div asp-validation-summary="ModelOnly "></div>*@
            <div class="form-group mb-3">
                <label for="name" class="mb-2">Название</label>
                <input asp-for="Name"
                       type="text"
                       class="form-control"
                       id="name"
                       placeholder="Название">
                <span asp-validation-for="Name" />
            </div>
            <div class="form-group mb-3">
                <label for="link" class="mb-2">Ссылка на страницу производителя</label>
                <input asp-for="Link"
                       type="text"
                       class="form-control"
                       id="link"
                       placeholder="Ссылка на страницу производителя">
                <span asp-validation-for="Link" />
            </div>
            <div class="form-group mb-3">
                <label for="email" class="mb-2">Почта</label>
                <input asp-for="Email"
                       type="email"
                       class="form-control"
                       id="email">
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group mb-3">
                <label for="createdDate" class="mb-2">Дата основания</label>
                <input asp-for="CreatedAt"
                       type="date"
                       class="form-control"
                       id="createdDate"
                       min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")"
                       max="@DateTime.Now.ToString("yyyy-MM-dd")">
                <span asp-validation-for="CreatedAt" />
            </div>
            <button type="submit" class="btn btn-outline-info mt-3">
                Создать
            </button>
        </form>
        
        @section Scripts
        {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</div>
