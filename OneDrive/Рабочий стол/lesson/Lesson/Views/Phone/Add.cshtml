@model Lesson.ViewModels.PhoneFormVm

@{
    ViewBag.Title = "Добавить устройство";
    Layout = "_Layout";
}

<h2>Добавление устройства</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            @{
                Html.RenderPartialAsync("PartialViews/PhoneFormPartial", Model);
            }
            <button type="submit" class="btn btn-outline-info mt-3">
                Создать
            </button>
        </form>
    </div>
</div>

