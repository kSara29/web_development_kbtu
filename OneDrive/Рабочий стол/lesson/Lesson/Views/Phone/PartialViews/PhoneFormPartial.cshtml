@model Lesson.ViewModels.PhoneFormVm

<div class="form-group mb-3">
    <label for="brand" class="mb-2">Производитель</label>
    <select class="form-control" id="brand" asp-for="BrandId">
        @foreach (var brand in Model.Brands)
        {
            @if (Model.BrandId.HasValue && Model.BrandId == brand.Id)
            {
                <option selected="selected" value="@brand.Id">@brand.Name</option>
            }
            else
            {
                <option value="@brand.Id">@brand.Name</option>
            }
        }
    </select>
</div>
<div class="form-group mb-3">
    <label for="title" class="mb-2">Название</label>
    <input asp-for="Title"
           type="text"
           value="@Model.Title"
           class="form-control"
           id="title"
           placeholder="Название">
</div>
<div class="form-group mb-3">
    <label for="price" class="mb-2">Цена</label>
    <input asp-for="Price"
           type="text"
           value="@Model.Price"
           class="form-control"
           id="price"
           placeholder="Цена">
</div>
<div class="form-group mb-3">
    <label for="displayType" class="mb-2">Тип дисплея</label>
    <input asp-for="DisplayType"
           type="text"
           value="@Model.DisplayType"
           class="form-control"
           id="displayType"
           placeholder="Тип дисплея">
</div>
<div class="form-group mb-3">
    <label for="ram" class="mb-2">ОЗУ (ГБ)</label>
    <input asp-for="Ram"
           type="number"
           value="@Model.Ram"
           class="form-control"
           id="ram"
           placeholder="ОЗУ">
</div>
<div class="form-group mb-3">
    <label for="capacity" class="mb-2">Емкость аккумулятора</label>
    <input asp-for="BatteryCapacity"
           type="number"
           value="@Model.Ram"
           class="form-control"
           id="capacity"
           placeholder="Емкость">
</div>
<div class="form-group mb-3">
    <label for="description" class="mb-2">Описание</label>
    <input asp-for="Description"
           type="text"
           class="form-control"
           id="description"
           placeholder="Описание">
</div>
<div class="form-group mb-3">
    <label for="image" class="mb-2">Изображение</label>
    <input asp-for="Image"
           type="text"
           class="form-control"
           id="image"
           placeholder="Url">
</div>