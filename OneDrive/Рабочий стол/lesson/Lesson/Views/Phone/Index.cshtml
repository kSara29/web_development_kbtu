@model List<Phone>

@{
    ViewBag.Title = "Мобильные телефоны";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Мобильные телефоны</h2>
</div>

<a asp-action="Add">Добавить смартфон</a>

@if (Model.Count == 0)
{
    <h3> Телефоны еще не добавлены </h3>
}
else
{
    <table class="table" style="width: 100%">
        <tr>
            <th>Id</th>
            <th>Наименование</th>
            <th>Компания</th>
            <th>Стоимость</th>
            <th>Детали</th>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Id</td>
                <td>@phone.Title</td>
                <td>@phone.Brand?.Name</td>
                <td>@phone.Price $</td>
                <td><a class="btn btn-dark" asp-action="Details" 
                       asp-route-phoneId="@phone.Id">Детали</a></td>
            </tr>
        }
    </table>
}
