@model List<Lesson.ViewModels.BrandVm>

@{
    ViewBag.Title = "Бренды";
    Layout = "_Layout";
}

<h2>Доступные бренды</h2>

<a asp-action="Add">Добавить бренд</a>

@if (Model.Count == 0)
{
    <h3> Бренды еще не добавлены </h3>
}
else
{
    <table class="table" style="width: 100%">
        <tr>
            <th>Наименование</th>
            <th>Ссылка</th>
        </tr>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td><a href="@brand.Link">Ссылка на страницу производителя</a></td>
            </tr>
        }
    </table>
}